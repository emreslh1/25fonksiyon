#include <stdio.h>

 int ntoplam(int sayi)
 {
 
   int i, toplam=0;
  
   for (i=1;i<=sayi;i++)
   {
    toplam+=i;
   }
   return toplam;
 }
int main(){
int sayi;

 printf("sayi giriniz:");
 scanf("%d",&sayi);



printf("girdiginiz sayiya kadar olan sayilarin toplami=%d",ntoplam(sayi));



return 0;
}

 
